{
    "name": "xliff-sync",
    "displayName": "XLIFF Sync",
    "description": "A tool to keep XLIFF translation files in sync.",
    "version": "0.1.3",
    "publisher": "rvanbekkum",
    "repository": {
        "type": "git",
        "url": "https://github.com/rvanbekkum/vsc-xliff-sync"
    },
    "bugs": {
        "url": "https://github.com/rvanbekkum/vsc-xliff-sync/issues"
    },
    "homepage": "https://github.com/rvanbekkum/vsc-xliff-sync/blob/master/README.md",
    "license": "MIT",
    "icon": "resources/xliffSync_logo.png",
    "keywords": [
        "xliff",
        "localization",
        "translation",
        "al"
    ],
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:xliffSync.synchronizeFile",
        "workspaceContains:**/*.xlf",
        "onCommand:xliffSync.findNextMissingTarget"
    ],
    "contributes": {
        "configuration": {
            "title": "XLIFF Sync",
            "properties": {
                "xliffSync.baseFile": {
                    "type": "string",
                    "default": "application.g.xlf",
                    "description": "Specifies the base XLIFF translation file."
                },
                "xliffSync.fileType": {
                    "type": "string",
                    "default": "xlf",
                    "description": "Specifies the translation files' type (xlf, xlf2)"
                },
                "xliffSync.findByMeaningAndDescription": {
                    "type": "boolean",
                    "default": true,
                    "description": "Specifies whether or not the extension will try to find translation units by meaning and description"
                },
                "xliffSync.findByMeaning": {
                    "type": "boolean",
                    "default": true,
                    "description": "Specifies whether or not the extension will try to find translation units by meaning"
                },
                "xliffSync.findBySource": {
                    "type": "boolean",
                    "default": false,
                    "description": "Specifies whether or not the extension will try to find translation units by source"
                },
                "xliffSync.missingTranslation": {
                    "type": "string",
                    "default": "!MISSING_TRANSLATION!",
                    "description": "Target tag content for missing translation (use %EMPTY% to leave new targets empty)"
                },
                "xliffSync.decoration": {
                    "type": "object",
                    "default": {
                        "color": "#990000",
                        "backgroundColor": "#ffff00",
                        "overviewRulerColor": "#ffff00",
                        "cursor": "pointer",
                        "border": "1px solid white",
                        "borderRadius": "4px"
                    },
                    "description": "Missing translation decoration"
                }
            }
        },
        "commands": [
            {
                "command": "xliffSync.synchronizeFile",
                "title": "Synchronize to Single File",
                "category": "XLIFF"
            },
            {
                "command": "xliffSync.synchronizeSources",
                "title": "Synchronize Translation Units",
                "category": "XLIFF"
            },
            {
                "command": "xliffSync.findNextMissingTarget",
                "title": "Next Missing Translation",
                "category": "XLIFF"
            }
        ],
        "keybindings": [
            {
                "command": "xliffSync.synchronizeFile",
                "key": "ctrl+win+s",
                "mac": "ctrl+cmd+s",
                "linux": "ctrl+meta+s"
            },
            {
                "command": "xliffSync.findNextMissingTarget",
                "key": "ctrl+win+n",
                "mac": "ctrl+cmd+n",
                "linux": "ctrl+meta+n",
                "when": "resourceExtname == .xlf"
            }
        ],
        "menus": {
            "touchBar": [
                {
                    "command": "xliffSync.synchronizeFile",
                    "group": "editing",
                    "when": "resourceExtname == .xlf"
                },
                {
                    "command": "xliffSync.findNextMissingTarget",
                    "group": "editing",
                    "when": "resourceExtname == .xlf"
                }
            ],
            "commandPalette": [
                {
                    "command": "xliffSync.findNextMissingTarget",
                    "when": "resourceExtname == .xlf"
                }
            ],
			"explorer/context": [
				{
					"command": "xliffSync.synchronizeSources",
					"group": "navigation",
					"when": "resourceExtname == .xlf"
				}
			]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/sax": "^1.0.0",
        "@types/xml2js": "^0.4.2",
        "@types/xml2json": "^0.10.0",
        "@types/xmlbuilder": "0.0.32",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.17"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always"
    },
    "dependencies": {
        "sax": "^1.2.4",
        "xml2js": "^0.4.19",
        "xmlbuilder": "^9.0.7"
    }
}
